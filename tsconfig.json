{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "outDir": "_dist",
    "module": "commonjs",
    "target": "es6",
    "declaration": true,
    "sourceMap": false,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "config/**/*", "typings/*", "App.tsx", "index.tsx", "global.d.ts"],
  "exclude": ["node_modules", "dist", "_dist"]
}
